<% layout("layouts/authboilarplate.ejs") -%>
<style>
    body{
        background: linear-gradient(to right, #6b11cbed, #2574fcf1);
    }
</style>
<body>
     <div class="row justify-content-center ">
    <div class=" col-md-4 signUp-box">
        <div class="signUp-head">
             <h3 class="my-3">SignUp</h3>
             <a href="/listings" class="cross-signUp"><i class="fa-solid fa-x"></i></a>
        </div>
<form action="/signUp" method="post" class=" needs-validation " novalidate>

       

        <div class="my-2 mt-3">
          <label for="username" class="form-label"
            >Username:<i class="fa-solid fa-asterisk"></i
          ></label>
          <input
            type="text"
            name="username"
            id="username"
            placeholder="username "
            class="form-control"
            required
          />
          <div class="valid-feedback">
      Looks good!
    </div>
    </div>

    <div class="my-2 mt-3">
          <label for="email" class="form-label"
            >Email:<i class="fa-solid fa-asterisk"></i
          ></label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="email "
            class="form-control"
            required
          />
    </div>

    <div class="my-2 mt-3">
          <label for="password" class="form-label"
            >password<i class="fa-solid fa-asterisk"></i
          ></label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="password "
            class="form-control"
            required
          />

    </div>

<div class="d-grid m-4">
    <button class="btn btn-primary">sign up</button>
</div>

</form>
</div>
</div>

   

</body>